<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:background="@color/grey">
        <EditText
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:background="@color/white"
        android:id="@+id/inputText"
        android:layout_height="fill_parent"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:background="@color/grey1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:id="@+id/red"
            android:src="@drawable/square_red"/>
        <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_toRightOf="@+id/red"
            android:layout_centerVertical="true"
            android:id="@+id/orange"
            android:layout_marginLeft="5dp"
                android:src="@drawable/square_orange"/>
        <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_toRightOf="@+id/orange"
                android:layout_centerVertical="true"
                android:id="@+id/green"
                android:layout_marginLeft="5dp"
                android:src="@drawable/square_green"/>
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_toRightOf="@+id/green"
                android:layout_centerVertical="true"
                android:id="@+id/blue"
                android:layout_marginLeft="5dp"
                android:src="@drawable/square_blue"/>
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_toRightOf="@+id/blue"
                android:layout_centerVertical="true"
                android:id="@+id/violet"
                android:layout_marginLeft="5dp"
                android:src="@drawable/square_purple"/>
            <Button
                android:id="@+id/submit"
                android:text="@string/submit"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:background="@color/blue"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"/>
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>